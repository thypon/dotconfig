#!/bin/sh
ELS="$(dmenu_path)"
ELS="$ELS $(flatpak list | grep ,current | awk '{print $1}')"
SEL=$(echo $ELS | tr ' ' '\n' | dmenu "$@")
SEL=$(dmenu_path_reorder $SEL)
ARCH=x86_64
# Hack for spotify client
sleep .3 && subtler -c spotify -T media && subtler -c spotify -U default &
if test "${SEL#*$ARCH}" != "$SEL"; then
	exec flatpak run $SEL
else
	exec firejail --shell=none $SEL
fi
